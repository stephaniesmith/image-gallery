{
  "name": "server",
  "version": "1.0.0",
  "description": "SnapShot Server",
  "main": "server.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "mocha": "mocha --recursive",
    "test": "npm run mocha",
    "test:watch": "npm run mocha -- -w",
    "test:unit": "nodemon --exec 'npm run mocha -- ./test/unit'",
    "test:e2e": "nodemon --exec 'npm run mocha -- ./test/e2e'",
    "start": "node server.js",
    "start:watch": "nodemon server.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "mongoose": "^5.0.16",
    "morgan": "^1.9.0",
    "validator": "^9.4.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "eslint": "^4.19.1",
    "mocha": "^5.1.1",
    "nodemon": "^1.17.3"
  }
}
